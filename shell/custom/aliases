# Get readable output
alias ls='ls --color=auto -GFhX'
alias ll='ls --color=auto -lGFhX'
alias la='ls --color=auto -aGFhX'
alias lla='ls --color=auto -alGFhX'
alias du='du -kHh'
alias df='df -kHh'

# #tmux
# alias tmux='tmux -2'

#Kerberos
alias kinit='kinit -l 7d bnayak'

#ssh
alias ssh='ssh -X -Y'

#diff
alias vd='vim diff'
alias nvd='nvim -d'
