# Get readable output
alias ls='gls --color=auto -GFhX'
alias ll='gls --color=auto -lGFhX'
alias la='gls --color=auto -aGFhX'
alias lla='gls --color=auto -alGFhX'
alias du='gdu -kHh'
alias df='gdf -kHh'

#Kerberos
alias kinit='kinit -l 7d bnayak'

#ssh
alias ssh='ssh -X -Y'

#diff
alias vd='vim diff'
alias nvd='nvim -d'
