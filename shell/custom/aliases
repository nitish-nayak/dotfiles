# Get readable output
alias ls='ls --color=auto -GFhX --group-directories-first'
alias ll='ls --color=auto -lGFhX --group-directories-first'
alias la='ls --color=auto -aGFhX --group-directories-first'
alias lla='ls --color=auto -alGFhX --group-directories-first'
alias du='du -kHh'
alias df='df -kHh'

#tmux
alias tmux='tmux -2'

#Kerberos
alias kinit='kinit -l 7d bnayak'

#ssh
alias ssh='ssh -X -Y'

#diff
alias vd='vim diff'
alias nvd='nvim -d'
