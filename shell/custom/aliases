# Get readable output
alias ls='ls --color=auto -GFh'
alias ll='ls --color=auto -lGFh'
alias la='ls --color=auto -aGFh'
alias lla='ls --color=auto -alGFh'
alias du='du -kHh'
alias df='df -kHh'

# #tmux
# alias tmux='tmux -2'

#Kerberos
alias kinit='kinit -l 7d bnayak'

#ssh
alias ssh='ssh -X -Y'

#diff
alias vd='vim diff'
alias nvd='nvim -d'
